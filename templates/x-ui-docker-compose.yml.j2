---
version: "3.9"

services:
  xui:
    container_name: xray-x-ui
    hostname: raspberry-xray
    image: d3vilh/x-ui:latest
    restart: unless-stopped
    volumes:
      - ./db/:/etc/x-ui/
      - ./cert/:/root/cert/
    environment:
      XRAY_VMESS_AEAD_FORCED: "false"
    tty: true
    network_mode: host